<!--form body for title, category, content-->
<div id="FormBody">
    <div class="form-group">    
        <label for="title">Title</label>
        <br>
        <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
    </div>
    
    <div class="form-group">    
        <label for="description">Category</label>
        <br>
        <textarea required type="text" name="description" id="description" class="form-control"> <%= article.description %>    </textarea>
    </div>
    <div class="form-group">    
        <label for="markdown">Content</label>
        
        <textarea required type="text" name="markdown" id="markdown" class="form-control"> <%= article.markdown %>   </textarea>
    </div>
    
    <br>
    <!--buttons for cancle and submit-->
    <a href="/" class="btn btn-secondary">Cancle</a>
    <button type="submit" class="btn btn-primary m-2">save</button>
    
</div>
