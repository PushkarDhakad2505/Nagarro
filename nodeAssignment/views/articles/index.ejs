<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        rel="stylesheet" 
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
        crossorigin="anonymous">

        
        <title>Blog</title>
    </head>
    <body>

       <div class="container">
           
        <%- include('_nav_and_background')%>
            <h1 class="mb-4 text-center">
                Blog Articles
            </h1>
        <% articles.forEach(article=>{ %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4>
                        <div class="card-title">
                            <%=article.title %>
                        
                        </div>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdDate.toLocaleDateString() %>

                    </div>
                    <div class="card-text mb-2" >
                        <%=article.description  %>

<br><br>

                    <a href="articles/<%= article.slug%>" class="btn btn-outline-primary">Read More</a>
                    <a href="articles/edit/<%= article.id%>" class="btn btn-outline-info">Edit</a>

                    <form action="/articles/<%= article.id%>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                    </div>

                </div>
            </div>
        <%})%>
        </div>
    </body>
</html>